generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model passwords {
  id        String   @id @default(cuid())
  email     String
  password  String
  code      String?
  createdAt DateTime @default(now())
}

model code {
  id      String @id @default(cuid())
  codeNum String
}

model showForm {
  id          String  @id @default("1")
  showMsgForm Boolean @default(false)
}
